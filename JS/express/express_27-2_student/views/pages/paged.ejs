<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Attendence</title>
    <link rel="stylesheet" href="data.css" />
  </head>
  <body>
    <div id="container">
      <div id="holder">
        <h3>Abhishek Verma</h3>
        <center><h2>Student Attendence</h2></center>
        <div id="upper">
          <div id="selecter">
            <select name="month" id="month">
              <option
                class="option"
                value="/paged?year=23&month=12&days=31&id=<%=count%>"
              >
                December 23
              </option>
              <option
                class="option"
                value="/paged?year=24&month=01&days=31&id=<%=count%>"
              >
                January 24
              </option>
              <option
                class="option"
                value="/paged?year=24&month=02&days=29&id=<%=count%>"
              >
                February 24
              </option>
            </select>
            <button onclick="gotosite()">Search</button>
          </div>
          <div class="container">
            <!-- <%console.log(count)%> -->
            <div class="navigation">
              <div class="count">
                <a
                  href="/paged?year=<%year%>&month=<%month%>&days=<%days%>&id=1"
                  ><button><<</button></a
                >
              </div>

              <div class="count">
                <a
                  href="/paged?year=<%=year%>&month=<%=month%>&days=<%=days%>&id=<%=Number(count)-1%>"
                  ><button><</button></a
                >
              </div>
              <div class="count"><%=count%></div>

              <div class="count">
                <a
                  href="/paged?year=<%=year%>&month=<%=month%>&days=<%=days%>&id=<%=Number(count)+1%>"
                  ><button>></button></a
                >
              </div>
              <div class="count">
                <a
                  href="/paged?year=<%=year%>&month=<%=month%>&days=<%=days%>&id=10"
                  ><button>>></button></a
                >
              </div>
            </div>
          </div>
        </div>
        <div>
          <table border="1">
            <tr>
              <th>Student ID</th>
              <th>Student Name</th>
              <th>Present days</th>
              <th>Present %</th>
            </tr>
            <%result.forEach(function (element) {%>
            <tr>
              <td><%=element.std_id%></td>
              <td><%=element.std_fname%> <%=element.std_lname%></td>
              <td><%=element.count%></td>
              <%let per = (element.count*100)/days%>

              <td><%=per.toFixed(2)%> %</td>
            </tr>

            <% }); %>
          </table>
        </div>
      </div>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        var input = document.getElementById("month");
        if (localStorage["month"]) {
          input.value = localStorage["month"];
        }
        input.onchange = function () {
          localStorage["month"] = this.value;
        };
      });
      function gotosite() {
        var value = document.getElementById("month").value;
        window.location.href = value;
        return;
      }
    </script>
  </body>
</html>
