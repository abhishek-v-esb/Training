<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Form</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body onload="showPage(1);">
    <%let refCount= 0%>
    <h3>
      <center><u>Job Application</u></center>
    </h3>
    <input hidden type="text" name="hiddenid" id="hiddenId" value="<%=id%>" />
    <section id="header_sec">
      <div class="container">
        <div id="header_div">
          <table id="header_table">
            <tr>
              <td
                onclick="headerClick(this)"
                class="head-td"
                id="basic-details_head"
              >
                Basic Details
              </td>
              <td
                onclick="headerClick(this)"
                class="head-td"
                id="education_head"
              >
                Education
              </td>
              <td onclick="headerClick(this)" class="head-td" id="workExp_head">
                Work Experience
              </td>
              <td
                onclick="headerClick(this)"
                class="head-td"
                id="language_head"
              >
                Language
              </td>
              <td
                onclick="headerClick(this)"
                class="head-td"
                id="technology_head"
              >
                Technology
              </td>
              <td
                onclick="headerClick(this)"
                class="head-td"
                id="referenceContact_head"
              >
                References
              </td>
              <td
                onclick="headerClick(this)"
                class="head-td"
                id="preference_head"
              >
                Preferences
              </td>
            </tr>
          </table>
        </div>
      </div>
    </section>
    <section id="formSec">
      <div class="container">
        <form id="form" method="POST">
          <input
            hidden
            type="text"
            name="hiddenid"
            id="hiddenId"
            value="<%=id%>"
          />
          <div class="active"><%- include('../partials/basic_details'); %></div>
          <div class="active"><%- include('../partials/education'); %></div>
          <div class="active"><%- include('../partials/work_exp'); %></div>
          <div class="active"><%- include('../partials/language'); %></div>
          <div class="active"><%- include('../partials/technology'); %></div>
          <div class="active"><%- include('../partials/reference'); %></div>
          <div class="active"><%- include('../partials/preference'); %></div>
        </form>
      </div>
    </section>
    <section id="nav">
      <div class="container">
        <div class="nav-btns" id="nav-div">
          <div id="prev" class="nav-btn" onclick="previous()">Previous</div>
          <div id="next" class="nav-btn" onclick="next()">Next</div>
          <%if(!id){%>
          <input
            id="submit"
            type="submit"
            form="form"
            class="nav-btn"
            value="Submit"
            formaction="/insert"
          />
          <%}else{%>
          <input
            id="submit"
            type="submit"
            form="form"
            class="nav-btn"
            value="Update"
            formaction="/update"
          />
          <%}%>
        </div>
      </div>
    </section>
    <footer><center>Abhishek Verma</center></footer>

    <script src="script.js"></script>
  </body>
</html>
