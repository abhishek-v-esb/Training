<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="data.css" />
  </head>
  <body>
    <div id="container">
      <div class="holder">
        <div class="form">
          <form action="/input?id=1&sql=<%=queryStr%>" method="POST">
            <div>
              <textarea name="query" id="query" cols="50" rows="5">
<%=queryStr%></textarea
              >
            </div>
            <div>
              <input type="submit" name="submit" id="submit" value="GO!" />
            </div>
          </form>
        </div>

        <table>
          <%try{%>
          <tr>
            <th><%=heading%></th>
          </tr>
          <%tables.forEach((element) => {%>
          <tr>
            <td><%=Object.values(element)[0]%></td>
          </tr>
          <%});%> <%} catch (error) {}%>
        </table>
        <%try {%>

        <div class="navigation">
          <div class="count">
            <a href="/input?id=1&sql=<%=queryStr%>">
              <%if( count==1){%>
              <button disabled><<</button>
              <%}else{%>
              <button><<</button>
              <%}%>
            </a>
          </div>

          <div class="count">
            <a href="/input?id=<%=Number(count)-1%>&sql=<%=queryStr%>"
              ><%if( count==1){%>
              <button disabled><</button>
              <%}else{%>
              <button><</button>
              <%}%></a
            >
          </div>
          <div class="count"><%=count%></div>

          <div class="count">
            <a href="/input?id=<%=Number(count)+1%>&sql=<%=queryStr%>"
              ><%if( count==total/records){%>
              <button disabled>></button>
              <%}else{%>
              <button>></button>
              <%}%></a
            >
          </div>
          <div class="count">
            <a href="/input?id=<%=total/records%>&sql=<%=queryStr%>"
              ><%if( count==total/records){%>
              <button disabled>>></button>
              <%}else{%>
              <button>>></button>
              <%}%></a
            >
          </div>
        </div>

        <div class="table">
          <table border="1">
            <tr>
              <%cols.forEach((col)=>{%>
              <th><%=col%></th>
              <%});%>
            </tr>

            <%result.forEach((element) => {%>
            <tr>
              <%for (let i = 0; i < cols.length; i++) {%>
              <td><%=Object.values(element)[i]%></td>
              <%}%>
            </tr>
            <%});%>
          </table>
        </div>

        <%} catch (error) {}%>
      </div>
    </div>
  </body>
</html>
